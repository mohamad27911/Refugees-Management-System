package Refugees_Management_System;

public class TestClasses {
	public static void main(String[] args) {
		 Refugee alice = new Refugee("Alice", 25, "CountryA", 500, "CountryA", 3, "Needs food");
	        Refugee bob = new Refugee("Bob", 30, "CountryB", 700, "CountryB", 2, "Needs shelter");
	        Refugee charlie = new Refugee("Charlie", 20, "CountryC", 600, "CountryC", 1, "Needs medical aid");

	        // Initial donations
	        Donor donor1 = new Donor("Donor1", 40, "CountryD", 300);
	        Donor donor2 = new Donor("Donor2", 50, "CountryE", 400);
	        Donor donor3 = new Donor("Donor3", 35, "CountryF", 200);

	        // Create RefugeesQueue and LinkedList<Donation>
	        RefugeesQueue refugeesQueue = new RefugeesQueue();
	        LinkedList<Donation> donations = new LinkedList<>();

	        // Adding refugees to the queue
	        refugeesQueue.addRefugee(alice);
	        refugeesQueue.addRefugee(bob);
	        refugeesQueue.addRefugee(charlie);

	        // Creating donations and transferring
	        Donation donation1 = new Donation(donor1, alice, 200);
	        Donation donation2 = new Donation(donor2, bob, 350);
	        Donation donation3 = new Donation(donor3, charlie, 150);

	        donations.insertAtBack(donation1);
	        donations.insertAtBack(donation2);
	        donations.insertAtBack(donation3);

	        // Display initial queue
	        System.out.println("Initial Queue:");
	        refugeesQueue.displayRefugees();

	        // Display initial donations
	        System.out.println("\nInitial Donations:");
	        donations.display();

	        // Transferring donations
	        System.out.println("\nTransferring Donations:");
	        Donation currentDonation = donations.removeFromFront();
	        while (currentDonation != null) {
	            currentDonation.transferDonation();
	            currentDonation = donations.removeFromFront();
	        }

	        // Display updated queue
	        System.out.println("\nUpdated Queue:");
	        refugeesQueue.displayRefugees();
	    
	}
}
