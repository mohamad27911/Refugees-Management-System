package Refugees_Management_System;

public class DonationQueue {
	private LinkedList<Donor> donorList;

	public DonationQueue() {
		donorList = new LinkedList<>();
	}

	public LinkedList<Donor> getDonorList() {
		return donorList;
	}

	public void setDonorList(LinkedList<Donor> donorList) {
		this.donorList = donorList;
	}

	public void addDonor(Donor donor) {
		donorList.insertWithPriority(donor, donor.getDonatedAmount());
	}

	public boolean removeDonor(Donor donor) {
		return donorList.remove(donor);
	}

	public Donor searchDonor(Donor donor) {
		return donorList.search(donor.getId());
	}

	public void displayDonors() {
		donorList.display();
	}
}
