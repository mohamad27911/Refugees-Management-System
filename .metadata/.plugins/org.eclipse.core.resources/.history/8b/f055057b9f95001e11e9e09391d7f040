package Refugees_Management_System;

public class TestClasses {
	public static void main(String[] args) {
		 RefugeesQueue refugeesQueue = new RefugeesQueue();

	        // Adding refugees to the queue
	        refugeesQueue.addRefugee(new Refugee("Alice", 25, "CountryA", 500, "CountryA", 3, "Needs food"));
	        refugeesQueue.addRefugee(new Refugee("Bob", 30, "CountryB", 700, "CountryB", 2, "Needs shelter"));
	        refugeesQueue.addRefugee(new Refugee("Charlie", 20, "CountryC", 600, "CountryC", 1, "Needs medical aid"));

	        System.out.println("Initial Queue:");
	        refugeesQueue.displayRefugees();

	        // Simulating donation amounts from donors
	        LinkedList<Donor> donors = new LinkedList<>();
	        donors.insertAtBack(new Donor("Donor1", 40, "CountryD", 300));
	        donors.insertAtBack(new Donor("Donor2", 50, "CountryE", 400));
	        donors.insertAtBack(new Donor("Donor3", 35, "CountryF", 200));

	        // Distributing aid among refugees
	        System.out.println("\nDistributing Aid:");
	        refugeesQueue.distributeAid(donors);

	        System.out.println("\nUpdated Queue:");
	        refugeesQueue.displayRefugees();
	}
}
